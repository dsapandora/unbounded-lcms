<% modules  = curriculum.modules %>

<% if modules.any? %>
	<div class=unit>
	  <div class=unit-wrapper>
	    <div class=row>
	      <div class=modules>
	        <div class=row>
						<% modules.each_with_index do |mod, idx| %>
							<div class='module-nav'>
					      <%= link_to( unbounded_resource_path(curriculum, mod), title: t('unbounded.curriculum.module_title', idx: idx + 1),class: 'module-nav-module' , data: { toggle: 'tooltip', placement: 'right' }) do %>
					      	<%= render 'module_svg' %>
					     	<% end %>
					     </div>
				    <% end %>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>
