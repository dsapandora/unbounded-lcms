<% units  = curriculum.units %>

<% if units.any? %>
	<div class=unit>
	  <div class=unit-wrapper>
	    <div class=row>
	      <div class=units>
	        <div class=row>
						<% units.each_with_index do |unit, idx| %>
							<div class='unit-nav'>
					      <%= link_to( unbounded_resource_path(unit, curriculum), title: t('unbounded.curriculum.unit_title', idx: idx + 1), class: ['module-nav-unit', ('active' if curriculum.current_lobject == unit)], data: { 'lobject-id' => unit.id }) do %>
					      	<%= render 'unit_svg' %>
					     	<% end %>
					     </div>
				    <% end %>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>
