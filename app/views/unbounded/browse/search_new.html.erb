<div class="search-form-page" data-role="page">
	<div class="header-module">
		<div class="container">
			<div class="row">
				<div class="search-form">
					<form class="form-horizontal" action="" method="POST">
						<div class="form-group">
							<div class="ub-group">
			    			<label for=""><%= t('curriculum_page.search_form.subject_label') %></label>
			    			<div class="ub-select">
						    	<select class="selectize form-control">
			    					<option value="1">1</option>
			    					<option value="2">2</option>
			    				</select>
			    			</div>
			  			</div>
							<div class="ub-group">
			    			<label for=""><%= t('curriculum_page.search_form.grade_label') %></label>
			    			<div class="ub-select">
						    	<select class="selectize form-control">
			    					<option value="1">1</option>
			    					<option value="2">2</option>
			    				</select>
			    			</div>
			  			</div>
							<div class="ub-group">
			    			<label for=""><%= t('curriculum_page.search_form.standard_label') %></label>
			    			<div class="ub-input">
						    	<input class="selectize form-control" type="text">
			    			</div>
			  			</div>
			  		</div>
			  		<div class="form-group">
			  			<div>
			  				<button type="submit" class="btn btn-lg btn-ub "><%= t('ui.search') %></button>
			  			</div>
			  		</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="curriculum-content">
	  <div class="container">
		  <% @lobjects.each do |lobject| %>
			  <% lobject.collection_trees.each do |tree| %>
			  	<h1><%= tree.content.title %></h1>
			  	<div class="row">
			  		<% tree.children.each do |resource| %>
							<div class="module module-<%= resource.children.size > 3? '12': '6' %>">
								<div class="module-wrapper">
									<div class="row">
										<div class="module-title">
											<div class="row">
												<div class="module-title-title"><%= module_title(resource.content.title) %></div>
												<div class="module-title-dsc"><%= resource.content.title %></div>
											</div>
										</div>
										<% resource.children.each_with_index do |unit, idx| %>
											<%= render partial: 'unit', locals: { unit: unit, idx: idx, chunk_size: 16, current: -1 } %>
										<% end %>
									</div>
								</div>
							</div>
			  		<% end %>
			  	</div>
			  <% end %>
			<% end %>
		</div>
	</div>

</div>