<script type="text/html" id="resource-preview-template">
  <div class="lesson-popover-content"><%%= lobject_preview.description %></div>

  <%% if (highlights.length) { %>
    <div class="lesson-popover-highlights">
      <div class="lesson-popover-title"><%%= I18n.t('unbounded.title.alignments') %></div>
      <%% _.each(highlights, function(highlight) { %>
        <p><%%= highlight.alignment.name %></p>
      <%% }); %>
    </div>
  <%% } %>
  <div class="lesson-popover-cta lesson-popover-cta-<%%= lobject_preview.curriculum_subject %>">
    <a class="btn btn-default btn-block" href="<%%= Routes.unbounded_show_path(lobject_preview.id) %>"><%%= t('ui.open_' + (lobject_preview.curriculum_subject || 'ela') + '_' + (lobject_preview.resource_kind || 'lesson')) %></a>
  </div>
</script>

<script type="text/html" id="popover-template">
  <div class="popover popover-lesson hidden-xs hidden-sm" role="tooltip">
    <div class="arrow"></div>
    <h3 class="popover-title"></h3>
    <div class="popover-content"></div>
  </div>
</script>
