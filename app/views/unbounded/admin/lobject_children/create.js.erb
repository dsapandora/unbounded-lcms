<% if @lobject_child.persisted? %>
  <% form = SimpleForm::FormBuilder.new(@collection.class.model_name.singular, @collection, self, {}) %>
  <% tree = @lobject_child.collection.tree(@lobject_child.child) %>
  <% html = render partial: 'unbounded/admin/collections/editable_tree', locals: { form: form, tree: tree } %>

  var $parent = $('#lobject_<%= @lobject_child.parent_id %>');
  var $list   = $('> ul', $parent);
  if ($list.length == 0) {
    $list = $('<ul>');
    $parent.append($list);
  }

  $list.append($('<%=j html %>'));
<% end %>

$('#add-child-modal').modal('hide');
