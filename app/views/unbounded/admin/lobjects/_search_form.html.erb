<%= simple_form_for @q, url: :unbounded_admin_lobjects, html: { class: 'form-inline well', method: :get } do |f| %>
  <%= f.input :lobject_grades_grade_id_in, as: :select, collection: Content::Models::Grade.all, input_html: { class: 'selectize lobject-search-select', multiple: true }, label: t('.grades'), label_method: :grade, required: false, wrapper_html: { class: 'lobject-search-wrap' } %>
  <%= f.input :lobject_alignments_alignment_id_in, as: :select, collection: Content::Models::Alignment.all, input_html: { class: 'selectize lobject-search-select', multiple: true }, label: t('.standards'), required: false, wrapper_html: { class: 'lobject-search-wrap' } %>
  <%= f.input :lobject_resource_types_resource_type_id_in, as: :select, collection: Content::Models::ResourceType.all, input_html: { class: 'selectize lobject-search-select', multiple: true }, label: t('.resource_types'), required: false, wrapper_html: { class: 'lobject-search-wrap' }  %>
  <%= f.button :submit, t('ui.search'), class: 'lobject-search-button', name: nil %>
<% end %>
