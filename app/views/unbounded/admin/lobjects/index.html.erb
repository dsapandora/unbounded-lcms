<div class=nc-content>
  <div class=clearfix>
    <div class=pull-right>
      <%= link_to t('.new_lobject'), :new_unbounded_admin_lobject, class: 'btn btn-success', 'data-no-turbolink' => '' %>
      <%= link_to t('ui.import_subtitles'), :new_unbounded_admin_subtitles_import, class: 'btn btn-success' %>
      <%= link_to t('ui.export_resources'), :new_unbounded_admin_curriculum_export, class: 'btn btn-success' %>
    </div>
  </div>

  <h2 class=text-center><%= t('.page_title') %></h2>

  <%= render 'search_form' %>

  <p class=text-right><%= page_entries_info @lobjects %>

  <%= form_tag :new_unbounded_admin_lobject_bulk_edits, method: :get do %>
    <table class=table>
      <tr>
        <th><%= check_box_tag nil, nil, false, class: 'lobject-list-select-all' %>
        <th>ID
        <th><%= t('.resource') %>
        <th><%= t('.grade_levels') %>
        <th><%= t('.standards') %>
        <th><%= t('.resource_types') %>
        <th><%= t('.subjects') %>
        <th><%= t('.status') %>
      </tr>

      <% @lobjects.each do |lobject| %>
        <tr>
          <% check_box_id = "ids_#{lobject.id}" %>
          <td><%= check_box_tag 'ids[]', lobject.id, false, class: 'lobject-checkbox', id: check_box_id %>
          <td><%= label_tag check_box_id, lobject.id, class: 'lobject-id-label' %>
          <td><%= link_to lobject.title, unbounded_show_path(lobject) %>
          <td class=lobject-tag-col><%= lobject.grades.map(&:grade).select(&:present?).join(', ') %>
          <td class=lobject-tag-col><%= lobject.alignments.map(&:name).select(&:present?).join(', ') %>
          <td class=lobject-tag-col><%= lobject.resource_types.map(&:name).select(&:present?).join(', ') %>
          <td class=lobject-tag-col><%= lobject.subjects.map(&:name).select(&:present?).join(', ') %>
          <td><%= lobject_status(lobject) %>
        </tr>
      <% end %>
    </table>

    <%= submit_tag 'Edit Selected', class: 'btn btn-default', name: nil %>
  <% end %>

  <div class=row>
    <div class='col-sm-12 text-center'>
      <%= will_paginate @lobjects, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
