<% set_page_title @google_doc.name %>

<div class=container>
  <div class=row>
    <div class='page-body googleDoc'>
      <div class=col-sm-4>
        <div class=googleDoc__nav>
          <h4><%= t('.contents') %></h4>
          <nav class=list-unstyled>
            <% @google_doc.headings.each do |heading| %>
              <li class='googleDoc__nav__item level<%= heading.level %>'><%= link_to heading.text, "##{heading.id}" %>
            <% end %>
          </nav>
        </div>
      </div>

      <div class=col-sm-8>
        <p class=text-right>
          <%= link_to t('.download_as_pdf'), url_for(format: 'pdf'), class: 'btn btn-success' %>
        </p>
        <%= @google_doc.content %>
      </div>
    </div>
  </div>
</div>
