<script type="text/html" id="resource-preview-template">
  <div class="lesson-popover-content"><%%= resource_preview.description %></div>

  <%% if (highlights.length) { %>
    <div class="lesson-popover-highlights">
      <div class="lesson-popover-title"><%%= I18n.t('title.standards') %></div>
      <%% _.each(highlights, function(highlight) { %>
        <p><%%= highlight.standard.name %></p>
      <%% }); %>
    </div>
  <%% } %>
  <div class="lesson-popover-cta lesson-popover-cta-<%%= resource_preview.curriculum_subject || curriculum_context %>">
    <a class="btn btn-default btn-block" href="<%%= resource_preview.slug ? Routes.show_with_slug_path(resource_preview.slug) : Routes.show_path(resource_preview.id) %>"><%%= t('ui.open_' + (resource_preview.curriculum_subject || curriculum_context) + '_' + (resource_preview.resource_kind || 'lesson')) %></a>
  </div>
</script>

<script type="text/html" id="popover-template">
  <div class="popover popover-lesson hidden-xs hidden-sm" role="tooltip">
    <div class="arrow"></div>
    <h3 class="popover-title"></h3>
    <div class="popover-content"></div>
  </div>
</script>
