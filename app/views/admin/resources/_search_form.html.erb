<%= simple_form_for @q, url: :admin_resources, html: { class: 'form-inline well admin-resource-search', method: :get } do |f| %>

  <%= f.input :resource_grades_grade_id_in, as: :select, collection: Grade.all, input_html: { class: 'selectize resource-search-select', multiple: true }, label: t('.grades'), label_method: :grade, required: false, wrapper_html: { class: 'resource-search-wrap' } %>

  <%= f.input :resource_standards_standard_id_in, as: :select, collection: Standard.all, input_html: { class: 'selectize resource-search-select', multiple: true }, label: t('.standards'), required: false, wrapper_html: { class: 'resource-search-wrap' } %>

  <%= f.input :resource_resource_types_resource_type_id_in, as: :select, collection: ResourceType.all, input_html: { class: 'selectize resource-search-select', multiple: true }, label: t('.resource_types'), required: false, wrapper_html: { class: 'resource-search-wrap' }  %>

  <%= f.input :resource_subjects_subject_id_in, as: :select, collection: Subject.all, input_html: { class: 'selectize resource-search-select', multiple: true }, label: t('.subjects'), required: false, wrapper_html: { class: 'resource-search-wrap' }  %>

  <%= f.input :title_cont, label: t('.title'), required: false, wrapper_html: { class: 'resource-search-wrap' }  %> 

  <%= f.button :submit, t('ui.search'), class: 'resource-search-button', name: nil %>

<% end %>
