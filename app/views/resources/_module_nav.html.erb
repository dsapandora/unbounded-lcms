<% units  = curriculum.units %>

<% if units.any? %>
	<div class=unit>
	  <div class=unit-wrapper>
	    <div class=row>
	      <div class=units>
	        <div class=row>
						<% units.each_with_index do |unit, idx| %>
							<div class='unit-nav'>
					      <%= link_to( unbounded_resource_path(unit, curriculum), title: t("curriculum.#{curriculum.subject}_unit_label", idx: idx + 1), class: ['module-nav-unit', ('active' if curriculum.current_resource == unit)], data: { 'resource-id' => unit.id }) do %>
					      	<figure>
					      		<figcaption><%= short_unit_title(curriculum, unit, idx) %></figcaption>
					      		<%= render 'unit_svg' %>
					      	</figure>
					     	<% end %>
					     </div>
				    <% end %>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>
